<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="false"
        app:cardCornerRadius="@dimen/pad_10">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.joooonho.SelectableRoundedImageView
                android:id="@+id/action_image"
                android:contentDescription="@string/image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                app:sriv_right_top_corner_radius="@dimen/size_5"
                app:sriv_right_bottom_corner_radius="@dimen/size_5"
                app:sriv_left_top_corner_radius="@dimen/size_5"
                app:sriv_left_bottom_corner_radius="@dimen/size_5"
                android:src="@drawable/mountain" />

            <TextView
                android:id="@+id/action_title"
                style="@style/TextViewTitle"
                android:padding="@dimen/size_5"
                android:textSize="@dimen/size_16"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_gravity="bottom"
                android:maxLines="1"
                android:textStyle="normal"
                android:fontFamily="@font/open_sans_semibold"
                android:background="@drawable/down_roun_green_back" />
        </FrameLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>