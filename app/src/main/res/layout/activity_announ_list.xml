<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.announcements_list.AnnouncementByCategoryActivity">

    <include
        android:id="@+id/include4"
        layout="@layout/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TabLayout
        android:id="@+id/all_announcement_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicatorColor="@color/purpleDark"
        app:tabSelectedTextColor="@color/purpleDark"
        app:tabTextColor="@color/purpleDark" />

    <android.support.v4.view.ViewPager
        android:id="@+id/all_announcement_list_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>