<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size_8"
    android:layout_marginTop="@dimen/size_2"
    android:layout_marginRight="@dimen/size_8"
    android:layout_marginBottom="@dimen/size_3"
    card_view:cardCornerRadius="@dimen/size_2"
    card_view:cardElevation="@dimen/size_2"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/forum_user"
                style="@style/ForumTextView"
                android:includeFontPadding="false"
                android:paddingStart="@dimen/size_8"
                android:paddingLeft="@dimen/size_8"
                android:paddingTop="@dimen/size_8"
                android:paddingEnd="@dimen/size_8"
                android:paddingRight="@dimen/size_8"
                android:paddingBottom="@dimen/size_5"
                android:textAllCaps="false"
                android:textColor="@color/purple"
                android:textSize="@dimen/size_17"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/forum_body"
                app:layout_constraintVertical_bias="0.0"
                tools:text="Эркин" />

            <TextView
                android:id="@+id/date"
                style="@style/TextViewCard"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/size_5"
                android:layout_marginEnd="@dimen/size_5"
                android:layout_marginRight="@dimen/size_5"
                android:layout_marginBottom="@dimen/size_5"
                android:layout_weight="0.5"
                android:gravity="end"
                android:paddingTop="@dimen/size_8"
                android:textAlignment="textEnd"
                android:textColor="@color/hintGray"
                android:textSize="@dimen/size_14" />

        </FrameLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/forum_body"
                style="@style/ForumTextView"
                android:layout_marginBottom="@dimen/size_5"
                android:lineSpacingExtra="@dimen/margin_0dp"
                android:paddingStart="@dimen/size_8"
                android:paddingLeft="@dimen/size_8"
                android:paddingTop="@dimen/margin_0dp"
                android:paddingEnd="@dimen/size_8"
                android:paddingRight="@dimen/size_8"
                android:paddingBottom="@dimen/size_5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Бездомных в Москве в лучшем случае не замечают. А здесь они в чистой футбольной форме, готовые к спортивной борьбе. Организатор – православная служба помощи «Милосердие»." />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="@dimen/size_17"
                android:layout_height="@dimen/size_17"
                android:layout_gravity="end|bottom"
                android:layout_marginTop="@dimen/size_5"
                android:layout_marginEnd="@dimen/size_5"
                android:layout_marginRight="@dimen/size_5"
                android:layout_marginBottom="@dimen/size_5"
                android:src="@drawable/ic_delete_black_24dp"
                android:visibility="gone" />

        </FrameLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>