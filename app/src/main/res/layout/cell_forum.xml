<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/size_3"
    android:layout_marginTop="@dimen/size_2"
    android:minHeight="@dimen/size_16"
    android:minWidth="40000dp"
    app:layout_goneMarginBottom="@dimen/size_3"
    app:layout_goneMarginTop="@dimen/size_2"
    card_view:cardCornerRadius="@dimen/size_5"
    card_view:cardElevation="@dimen/size_5"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_5"
        android:background="@drawable/gray_border"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/forum_user"
                style="@style/ForumTextView"
                android:includeFontPadding="false"
                android:paddingEnd="@dimen/size_8"
                android:paddingLeft="@dimen/size_8"
                android:paddingRight="@dimen/size_8"
                android:paddingStart="@dimen/size_8"
                android:textAllCaps="false"
                android:textColor="@color/purple"
                android:textSize="@dimen/size_17"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/forum_body"
                app:layout_constraintVertical_bias="0.0"
                tools:text="Эркин" />


            <ImageView
                android:id="@+id/delete"
                android:layout_width="@dimen/size_17"
                android:layout_height="@dimen/size_17"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/size_5"
                android:layout_marginEnd="@dimen/size_5"
                android:layout_marginRight="@dimen/size_5"
                android:layout_marginTop="@dimen/size_5"
                android:src="@drawable/ic_delete_black_24dp"
                android:visibility="gone" />
        </FrameLayout>


        <TextView
            android:id="@+id/forum_body"
            style="@style/ForumTextView"
            android:layout_marginBottom="@dimen/size_5"
            android:lineSpacingExtra="@dimen/margin_0dp"
            android:paddingEnd="@dimen/size_8"
            android:paddingLeft="@dimen/size_8"
            android:paddingRight="@dimen/size_8"
            android:paddingStart="@dimen/size_8"
            android:paddingTop="@dimen/margin_0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Бездомных в Москве в лучшем случае не замечают. А здесь они в чистой футбольной форме, готовые к спортивной борьбе. Организатор – православная служба помощи «Милосердие»." />

    </LinearLayout>

</LinearLayout>