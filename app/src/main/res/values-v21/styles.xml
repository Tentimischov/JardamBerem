<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="cardViewStyle">@style/CardView</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:dropDownItemStyle">@style/spinnerDropDownItemStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/spinnerDropDownItemStyle</item>
        <item name="android:textColor">@color/mainText</item>
    </style>

    <style name="CustomTheme" parent="AppTheme">
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_16</item>
        <item name="android:textColor">@color/mainText</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
        <item name="android:padding">@dimen/margin_0dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:popupBackground">@drawable/popup_spinner_background</item>
    </style>

</resources>